#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(void) {
	char temp,text[1000] ,rev[1000];
	int i,j=0;
	printf("Enter a string:\n");
	fflush(stdin);fflush(stdout);
	gets(text);
	for(i=strlen(text);i>0;i--)
	{
		temp=text[i];
		text[i]=rev[j];
		rev[j]=temp;
		j++;
	}
	printf("Reverse string is:%s",rev);

	return 0;
}
