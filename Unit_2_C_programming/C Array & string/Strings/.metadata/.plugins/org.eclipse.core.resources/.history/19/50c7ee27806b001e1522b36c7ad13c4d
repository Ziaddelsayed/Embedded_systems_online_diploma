#include <stdio.h>
#include <stdlib.h>

int main(void) {

		char text[100];
		int i,len;
		printf("Enter a string:\n");
		fflush(stdin);fflush(stdout);
		gets(text);
		for(i=0;i<100;i++)
		{
			if(text[i]==0)
			{
				printf("Length of string=%d \n",i+1);
			}

		}

		return 0;

	}
