#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void reverse();
int main(void) {
	printf("Enter a sentence:\n");
	reverse();
	return 0;
}
void reverse(){
	char x;
	scanf("%c",&x);
	if(x!='\n')
	{
		reverse();
		printf("%c",x);
	}
}
